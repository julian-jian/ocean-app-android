<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:background="@color/white"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/tx_bg"
                android:layout_height="262dp">

            <TextView
                    android:id="@+id/searchEt"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_rectangle_with_arc"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="44dp"
                    style="@style/Edit"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/TextColorGrey66"
                    android:hint="请输入你想要搜索的内容"
                    android:textSize="18sp"
                    />

            <cn.bingoogolapple.bgabanner.BGABanner
                    android:id="@+id/bannerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bg_height"
                    android:layout_marginTop="22dp"
                    app:banner_pageChangeDuration="1000"
                    android:layout_below="@+id/searchEt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:banner_indicatorGravity="bottom|center_horizontal"
                    app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
                    app:banner_isNumberIndicator="false"
                    app:banner_pointAutoPlayAble="true"
                    app:banner_pointContainerBackground="@android:color/transparent"
                    app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                    app:banner_transitionEffect="defaultEffect"/>
            <!--<ezy.ui.view.BannerView-->
                 <!---->
                    <!--app:bvIsLoop="true"-->
                    <!--app:bvIsAuto="true"-->
                    <!--android:padding="8dp"-->
                    <!--android:layout_marginLeft="@dimen/margin_16"-->
                    <!--android:layout_marginRight="@dimen/margin_16"-->
                    <!--app:bvAspectRatio="0.6666666"-->
                    <!--app:bvIndicatorColor="#cccccc"-->
                    <!--app:bvIndicatorColorSelected="@color/colorAccent"/>-->

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/nav1Iv"
                    android:layout_width="165dp"
                    android:layout_height="90dp"
                    android:src="@drawable/nav01"
                    android:scaleType="fitXY"
                    />

            <ImageView
                    android:id="@+id/nav2Iv"
                    android:layout_width="165dp"
                    android:layout_height="90dp"
                    android:src="@drawable/nav02"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitXY"
                    />
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐断路器"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff3488ea"
                android:textSize="20sp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Recommended circuit breaker"
                android:textColor="#ff999999"
                android:textSize="14sp"
                />


        <!-- 布局中添加自定义控件-->
        <com.sky.lamp.ui.CoverFlowViewPager
                android:id="@+id/coverFlowVP"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/textView"
                android:layout_below="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                />

        <TextView
                android:id="@+id/moreTv"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:background="@drawable/bg_rectangle_with_arc"
                android:text="更多"
                android:textColor="#ff000000"
                android:textSize="18sp"
                />

        <View
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</ScrollView>