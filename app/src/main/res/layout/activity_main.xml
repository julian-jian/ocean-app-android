<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:orientation="vertical">

    <include layout="@layout/include_action_bar" />

    <com.chenxi.tabview.widget.TabContainerView
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:divideLineColor="@color/common_line_two"
            app:divideLineHeight="0.3dp"
            app:drawablePadding="1dp"
            app:iconHeight="22dp"
            app:iconWidth="22dp"
            app:selectedTextColor="@color/TextColorGrey99"
            app:tabTextColor="@color/TextColorGrey99"
            app:tabTextSize="12sp" />

</LinearLayout>